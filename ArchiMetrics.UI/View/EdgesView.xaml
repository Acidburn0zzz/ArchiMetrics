<UserControl x:Class="ArchiMetrics.UI.View.EdgesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 xmlns:mui="http://firstfloorsoftware.com/ModernUI"
			 xmlns:localization="clr-namespace:ArchiMetrics.UI.Localization"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=viewModel:VertexViewModel}"
			 mui:ModernFrame.KeepAlive="True">
	<mui:ModernTab SelectedSource="View/Tabs/EdgeTransformationView.xaml"
				   ContentLoader="{DynamicResource Loader}">
		<mui:ModernTab.Links>
			<mui:Link DisplayName="{x:Static localization:Strings.Transform}"
					  Source="View/Tabs/EdgeTransformationView.xaml" />
			<mui:Link DisplayName="{x:Static localization:Strings.Graph}"
					  Source="View/Tabs/EdgesGraphView.xaml" />
		</mui:ModernTab.Links>
	</mui:ModernTab>
</UserControl>
