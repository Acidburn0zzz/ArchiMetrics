<UserControl x:Class="ArchiMetrics.UI.View.MetricsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mui="http://firstfloorsoftware.com/ModernUI"
			 xmlns:localization="clr-namespace:ArchiMetrics.UI.Localization"
			 mc:Ignorable="d">
	<mui:ModernTab SelectedSource="View/Tabs/MetricsProjectDataGridView.xaml"
				   ContentLoader="{DynamicResource Loader}">
		<mui:ModernTab.Links>
			<mui:Link DisplayName="{x:Static localization:Strings.Projects}"
					  Source="View/Tabs/MetricsProjectDataGridView.xaml" />
			<mui:Link DisplayName="{x:Static localization:Strings.Namespace}"
					  Source="View/Tabs/MetricsNamespaceDataGridView.xaml" />
			<mui:Link DisplayName="{x:Static localization:Strings.Types}"
					  Source="View/Tabs/MetricsTypeDataGridView.xaml" />
			<mui:Link DisplayName="{x:Static localization:Strings.Members}"
					  Source="View/Tabs/MetricsMemberDataGridView.xaml" />
			<mui:Link DisplayName="{x:Static localization:Strings.Charts}"
					  Source="View/Tabs/MetricsChart.xaml" />
		</mui:ModernTab.Links>
	</mui:ModernTab>
</UserControl>
