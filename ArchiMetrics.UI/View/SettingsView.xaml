<UserControl x:Class="ArchiMetrics.UI.View.SettingsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 xmlns:mui="http://firstfloorsoftware.com/ModernUI"
			 xmlns:localization="clr-namespace:ArchiMetrics.Localization;assembly=ArchiMetrics.Localization"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=viewModel:SettingsViewModel}">
	<mui:ModernTab SelectedSource="/View/Tabs/SettingsBasic.xaml"
				   ContentLoader="{DynamicResource Loader}">
		<mui:ModernTab.Links>
			<mui:Link Source="/View/Tabs/SettingsBasic.xaml"
					  DisplayName="{x:Static localization:Strings.General}" />
			<mui:Link Source="/View/Tabs/SettingsRules.xaml"
					  DisplayName="{x:Static localization:Strings.Rules}" />
			<mui:Link Source="/View/Tabs/SettingsSpelling.xaml"
					  DisplayName="{x:Static localization:Strings.Spelling}" />
		</mui:ModernTab.Links>
	</mui:ModernTab>
</UserControl>
