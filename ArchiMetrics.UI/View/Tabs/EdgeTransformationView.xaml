<UserControl x:Class="ArchiMetrics.UI.View.Tabs.EdgeTransformationView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:view="clr-namespace:ArchiMetrics.UI.View"
			 xmlns:structure="clr-namespace:ArchiMetrics.Common.Structure;assembly=ArchiMetrics.Common"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=viewModel:VertexViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<DataGrid Grid.Column="0"
				  AutoGenerateColumns="False"
				  GridLinesVisibility="None"
				  EnableColumnVirtualization="False"
				  HeadersVisibility="Column"
				  EnableRowVirtualization="True"
				  ItemsSource="{Binding Path=EdgeItems}">
			<DataGrid.Columns>
				<DataGridTextColumn d:DataContext="{d:DesignInstance Type=structure:ModelEdgeItem}"
									Header="Source"
									Binding="{Binding Path=Source.QualifiedName}" />
				<DataGridTextColumn d:DataContext="{d:DesignInstance Type=structure:ModelEdgeItem}"
									Header="Target"
									Binding="{Binding Path=Target.QualifiedName}" />
			</DataGrid.Columns>
		</DataGrid>
		<DataGrid Grid.Column="1"
				  Grid.Row="0"
				  AutoGenerateColumns="False"
				  GridLinesVisibility="None"
				  ItemsSource="{Binding Path=VertexTransforms}"
				  CanUserAddRows="True"
				  HeadersVisibility="Column"
				  CanUserReorderColumns="False"
				  CanUserDeleteRows="True"
				  CanUserSortColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn d:DataContext="{d:DesignInstance Type=structure:TransformRule}"
									Header="Pattern"
									Binding="{Binding Path=Pattern, Mode=TwoWay}" />
				<DataGridTextColumn d:DataContext="{d:DesignInstance Type=structure:TransformRule}"
									Header="Name"
									Binding="{Binding Path=Name, Mode=TwoWay}" />
			</DataGrid.Columns>
		</DataGrid>
		<view:LoadingControl Grid.ColumnSpan="2"
							 Visibility="{Binding Path=IsLoading, Converter={StaticResource TrueVisibility}, Mode=OneWay}" />
		<Grid Grid.Row="1"
			  Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBlock x:Name="PathBox"
					   Grid.Column="0"
					   Text="{Binding Path=VertexRules, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			<Button Grid.Column="1"
					Margin="5,0"
					Height="25"
					Content="Load Rules"
					Click="OnClick" />
			<Button Grid.Column="2"
					Margin="5,0"
					Height="25"
					Content="Save Rules"
					Click="OnSave" />
			<Button Grid.Column="3"
					Margin="5,0"
					Height="25"
					HorizontalAlignment="Right"
					Content="Update"
					Command="{Binding Path=UpdateList}" />
		</Grid>
	</Grid>
</UserControl>
