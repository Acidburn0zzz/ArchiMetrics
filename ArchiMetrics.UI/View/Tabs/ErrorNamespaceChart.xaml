<UserControl x:Class="ArchiMetrics.UI.View.Tabs.ErrorNamespaceChart"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:metroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=viewModel:CodeErrorGraphViewModel}">
	<ScrollViewer VerticalAlignment="Stretch"
				  HorizontalAlignment="Stretch">
		<metroChart:PieChart ChartTitle="Errors Found"
							 ChartSubTitle="Namespace"
							 VerticalAlignment="Stretch"
							 HorizontalAlignment="Stretch">
			<metroChart:PieChart.Series>
				<metroChart:ChartSeries ValueMember="Value"
										VerticalAlignment="Stretch"
										HorizontalAlignment="Stretch"
										SeriesTitle="Error"
										DisplayMember="Key"
										ItemsSource="{Binding Path=ErrorsByNamespace}" />
			</metroChart:PieChart.Series>
		</metroChart:PieChart>
	</ScrollViewer>
</UserControl>
