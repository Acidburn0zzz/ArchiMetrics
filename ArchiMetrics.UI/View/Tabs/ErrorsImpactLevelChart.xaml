<UserControl x:Class="ArchiMetrics.UI.View.Tabs.ErrorsImpactLevelChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:metroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 xmlns:localization="clr-namespace:ArchiMetrics.Localization;assembly=ArchiMetrics.Localization"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=viewModel:CodeErrorGraphViewModel}">
	<ScrollViewer VerticalAlignment="Stretch"
				  HorizontalAlignment="Stretch">
		<metroChart:PieChart ChartTitle="{x:Static localization:Strings.ErrorsFound}"
							 ChartSubTitle="{x:Static localization:Strings.ByImpactLevel}"
							 VerticalAlignment="Stretch"
							 HorizontalAlignment="Stretch">
			<metroChart:PieChart.Series>
				<metroChart:ChartSeries ValueMember="Value"
										VerticalAlignment="Stretch"
										HorizontalAlignment="Stretch"
										SeriesTitle="{x:Static localization:Strings.Error}"
										DisplayMember="Key"
										ItemsSource="{Binding Path=ErrorsByImpactLevel}" />
			</metroChart:PieChart.Series>
		</metroChart:PieChart>
	</ScrollViewer>
</UserControl>
