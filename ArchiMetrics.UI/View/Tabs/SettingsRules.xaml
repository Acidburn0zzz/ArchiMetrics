<UserControl x:Class="ArchiMetrics.UI.View.Tabs.SettingsRules"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:dataAccess="clr-namespace:ArchiMetrics.UI.DataAccess"
			 xmlns:viewModel="clr-namespace:ArchiMetrics.UI.ViewModel"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=viewModel:SettingsViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Content="Reviewed Rules"
			   Grid.Row="0" />
		<ListBox Grid.Row="1"
				 Margin="5" VerticalAlignment="Top"
				 SelectionMode="Extended"
				 ScrollViewer.PanningMode="VerticalOnly"
				 ScrollViewer.VerticalScrollBarVisibility="Auto"
				 ItemsSource="{Binding Path=AvailableRules.Availabilities}">
			<ListBox.ItemTemplate>
				<DataTemplate DataType="dataAccess:IAvailability">
					<CheckBox IsThreeState="False"
							  IsChecked="{Binding Path=IsAvailable, Mode=TwoWay}"
							  Content="{Binding Path=Title}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
